<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.roseleen.gradecomputation.Main2Activity">

    <TextView
        android:id="@+id/raGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:paddingLeft="20dp"
        android:text="Your RA is: "
        android:textColor="#db4c66"/>
    <TextView
        android:id="@+id/finalGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/raGrade"
        android:paddingLeft="20dp"
        android:text="Your final grade is: "
        android:textColor="#db4c66"/>
    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:layout_below="@+id/finalGrade"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:onClick="goBackToMain"
        android:textColor="#db4c66"
        />
</RelativeLayout>
